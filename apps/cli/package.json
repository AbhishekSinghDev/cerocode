{
  "name": "cero-code",
  "version": "0.1.4",
  "description": "AI-powered CLI with chat and agent capabilities",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "cero": "dist/index.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "build": "NODE_ENV=production tsup src/index.ts --format esm --clean --minify",
    "build:watch": "tsup src/index.ts --format esm --watch",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist node_modules",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "ai",
    "chat",
    "agent"
  ],
  "author": "Abhishek Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhishekSinghDev/cero-cli.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-auth": "^1.3.34",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cross-keychain": "^1.1.0",
    "figlet": "^1.9.4",
    "open": "^11.0.0",
    "ora": "^9.0.0"
  }
}
