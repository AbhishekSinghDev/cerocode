{
  "name": "cero-code",
  "version": "0.1.4",
  "description": "AI-powered CLI with chat and agent capabilities",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "cero": "dist/index.js"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "build": "NODE_ENV=production tsup src/index.ts --format esm --clean --minify",
    "build:watch": "tsup src/index.ts --format esm --watch",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist node_modules",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "ai",
    "chat",
    "agent"
  ],
  "author": "Abhishek Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhishekSinghDev/cero-cli.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "better-auth": "catalog:",
    "boxen": "catalog:",
    "chalk": "catalog:",
    "commander": "catalog:",
    "cross-keychain": "catalog:",
    "figlet": "catalog:",
    "open": "catalog:",
    "ora": "catalog:"
  }
}
