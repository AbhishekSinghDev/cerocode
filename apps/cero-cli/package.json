{
  "name": "cerocode",
  "version": "0.3.2",
  "description": "AI-powered CLI with chat and agent capabilities",
  "main": "./dist/index.js",
  "type": "module",
  "bin": {
    "cero": "dist/index.js"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development bun src/index.ts",
    "build": "NODE_ENV=production tsup",
    "build:watch": "tsup --watch",
    "start": "NODE_ENV=production bun dist/index.js",
    "clean": "rm -rf dist node_modules",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write ."
  },
  "keywords": [
    "cli",
    "ai",
    "chat",
    "agent"
  ],
  "author": "Abhishek Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbhishekSinghDev/cerocode.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.7"
  },
  "dependencies": {
    "@opentui/core": "^0.1.50",
    "@opentui/react": "^0.1.50",
    "better-auth": "^1.4.1",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cross-keychain": "^1.1.0",
    "figlet": "^1.9.4",
    "open": "^11.0.0",
    "ora": "^9.0.0",
    "react": "^19.2.0"
  }
}
